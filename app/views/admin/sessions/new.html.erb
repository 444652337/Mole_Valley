<div class="container">
  <%= form_tag admin_session_path, :class=>"form-signin" do -%>
    <h2 class="form-signin-heading">
      Please sign in
    </h2>
        <% if flash[:error] %>
        <div class="alert alert-error">
          <%= flash[:error] %>
        </div>
        <% end %>
        <%= text_field_tag 'username', nil, :class=>"input-block-level", :autofocus=> true, :placeholder=>'username' %>
        <%= password_field_tag 'password', nil, :class=>'input-block-level', :placeholder=>'password' %>
        <button class="btn btn-primary" type="submit">Sign in</button>
  <% end -%>
</div>
</body>
</html>