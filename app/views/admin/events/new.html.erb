<div class="container">
  <%= form_for(@event, :url=>admin_events_path, :html=>{:class=>"form-horizontal"}) do |f| %>
    <% if @event.errors.any? %>
      <div class="alert alert-block alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :content, 'Content of event', :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :content, :class=>"input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= link_to 'Back', admin_events_path, :class=>"btn pull-right" %>
      <%= f.submit 'save', :class=>"btn btn-primary pull-right" %>
    </div>
  <% end %>
</div>
