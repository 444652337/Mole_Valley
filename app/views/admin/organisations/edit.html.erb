<div class="container">
  <%= form_for(@organisation, :url=>admin_organisation_path(@organisation), :html=>{:class=>"form-horizontal"}) do |f| %>
    <% if @organisation.errors.any? %>
      <div class="alert alert-block alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4><%= pluralize(@organisation.errors.count, "error") %> prohibited this organisation from being saved:</h4>
        <ul>
          <% @organisation.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :name, 'Name', :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class=>"input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, 'Description', :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :description, :class=>"input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :link, 'Link', :class=>"control-label" %>
      <div class="controls">
        <%= f.text_field :link, :class=>"input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= link_to 'Back', admin_organisations_path, :class=>"btn pull-right" %>
      <%= f.submit 'save', :class=>"btn btn-primary pull-right" %>
    </div>
  <% end %>

</div>
